obj-y += libpasswd
obj-y += nvram-encrypt
obj-y += transmission-2.92
obj-y += readline
obj-y += expat
obj-y += wxbase
obj-y += crypto
obj-y += amule
obj-y += DownloadMaster-ipk
obj-y += openssl-ipk
obj-y += libcurl-ipk

all: $(obj-y)

