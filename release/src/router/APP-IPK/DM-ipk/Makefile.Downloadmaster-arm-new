export  SRCBASE := $(shell pwd)
BUILD := i386-pc-linux-gnu
HOSTCC := gcc
PLATFORM := arm-buildroot-linux
CROSS_COMPILE := arm-buildroot-linux-uclibcgnueabi-
TOOLCHAIN := $(shell cd $(dir $(shell which $(CROSS_COMPILE)gcc)) && pwd)
CONFIGURE := ./configure --host=arm-linux --build=$(BUILD)
export IPKG_TOOLS := $(shell cd $(dir $(shell which $(CROSS_COMPILE)gcc))/../../ipkg-utils-1.7 && pwd)
export LD_DIR := $(shell cd $(dir $(shell which $(CROSS_COMPILE)gcc))/../ && pwd)
export LIBPREF=$(LD_DIR)


export CC := $(CROSS_COMPILE)gcc
export AR := $(CROSS_COMPILE)ar
export AS := $(CROSS_COMPILE)as
export LD := $(CROSS_COMPILE)ld
export NM := $(CROSS_COMPILE)nm
export RANLIB := $(CROSS_COMPILE)ranlib
export STRIP := $(CROSS_COMPILE)strip
export SIZE := $(CROSS_COMPILE)size
export CXX := $(CROSS_COMPILE)g++


# libpasswd:
export LDFLAGS_P := -L$(TOOLCHAIN)/../arm-buildroot-linux-uclibcgnueabi/sysroot/usr/lib -lcrypt  -Wl,-rpath,/opt/lib
export	CFLAGS_P := -Os -Wall  -fPIC
#
# standard packages
#
obj-y += mkdir
obj-y += DM-UI
obj-y += CGI
obj-y += dm2_detect
obj-y += snarf
obj-y += zlib
obj-y += ncurses
obj-y += libpng
obj-y += pcre
obj-y += libxml2
obj-y += openssl
obj-y += nzbget
obj-y += libevent
