	AR=$(AR) AS=$(AS) LD=$(LD) NM=$(NM) CC=$(CC) CPP="$(CC) -E" GCC=$(CC) CXX=$(CXX) RANLIB=$(RANLIB) STRIP=$(STRIP) \
		CPPFLAGS="-O2   -pipe  -I$(SRCBASE)/opt/include " \
		LDFLAGS=" -L$(SRCBASE)/opt/lib -Wl,-rpath,/opt/lib -Wl,-rpath-link,$(SRCBASE)/opt/lib -Wl,-dynamic-linker=/opt/lib/ld-uClibc.so.1 -ldl" \
		./configure \
		--build=i386-pc-linux-gnu \
		--host=arm-linux \
		--target=arm-linux \
		--prefix=$(SRCBASE)/opt \
		--disable-nls \
		--disable-static
	@$(MAKE) -C  libpng all
	cd libpng && \
	$(MAKE) install
