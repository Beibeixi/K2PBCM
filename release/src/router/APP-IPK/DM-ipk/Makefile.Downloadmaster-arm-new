	@$(MAKE) -C dm2_detect clean	
	@$(MAKE) -C dm2_detect all NEW_ARM=y
	$(STRIP) dm2_detect/dm2_detect
	cp -rf dm2_detect/dm2_detect DownloadMaster-ipk-2.1/opt/tmp/bin/

