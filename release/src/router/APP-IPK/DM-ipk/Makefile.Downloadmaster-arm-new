openssl/stamp-h1: 
		cd openssl \
		touch stamp-h1;	


openssl: openssl/stamp-h1
	cd openssl && \
	AR=$(AR) AS=$(AS) LD=$(LD) NM=$(NM) CC=$(CC) CPP="$(CC) -E" GCC=$(CC) CXX=$(CXX) RANLIB=$(RANLIB) STRIP=$(STRIP) LDFLAGS=" -L$(SRCBASE)/opt/lib -Wl,-rpath,/opt/lib -Wl,-rpath-link,$(SRCBASE)/opt/lib -Wl,-dynamic-linker=/opt/lib/ld-uClibc.so.1 -ldl" \
	./Configure shared no-zlib -O2 -pipe  -I$(SRCBASE)/opt/include --openssldir=/opt/share/openssl --prefix=/opt --install_prefix=$(SRCBASE) linux-generic32
	cd openssl && sed -i "s|^SHARED_LDFLAGS=|SHARED_LDFLAGS=-Wl,-rpath,\/opt\/lib -Wl,-rpath-link,$(SRCBASE)\/opt\/lib -Wl,-dynamic-linker=\/opt\/lib\/ld-uClibc.so.1|" Makefile
	@$(MAKE) -C openssl \
	EX_LIBS=" -Wl,-rpath,/opt/lib -Wl,-rpath-link,$(SRCBASE)/opt/lib -Wl,-dynamic-linker=/opt/lib/ld-uClibc.so.1 -ldl"
	cp -rf openssl/apps/openssl openssl-ipk-2.1/opt/tmp/bin/
	cp -rf openssl/apps/openssl.cnf openssl-ipk-2.1/opt/tmp/share/openssl/
	cp -rf openssl/libssl.so.1.0.0 openssl-ipk-2.1/opt/tmp/lib/
	cp -rf openssl/libssl.so openssl-ipk-2.1/opt/tmp/lib/
	cp -rf openssl/libcrypto.so.1.0.0 openssl-ipk-2.1/opt/tmp/lib/
	cp -rf openssl/libcrypto.so openssl-ipk-2.1/opt/tmp/lib/
	cd openssl && \
	$(MAKE) install

